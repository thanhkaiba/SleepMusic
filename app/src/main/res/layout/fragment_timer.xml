<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TimerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.tienthanh.myapplication.Custom.DigitalTextView
            android:id="@+id/timer_10_minutes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="10 minutes"
            android:textSize="30dp" />

        <com.example.tienthanh.myapplication.Custom.DigitalTextView
            android:id="@+id/timer_20_minutes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="20 minutes"
            android:textSize="30dp" />

        <com.example.tienthanh.myapplication.Custom.DigitalTextView
            android:id="@+id/timer_30_minutes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="30 minutes"
            android:textSize="30dp" />

        <com.example.tienthanh.myapplication.Custom.DigitalTextView
            android:id="@+id/timer_1hour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="1 HOUR"
            android:textSize="30dp" />

        <com.example.tienthanh.myapplication.Custom.DigitalTextView
            android:id="@+id/timer_2hour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="2 HOURS"
            android:textSize="30dp" />

        <com.example.tienthanh.myapplication.Custom.DigitalTextView
            android:id="@+id/custom_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="CUSTOM"
            android:textSize="30dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>